@model IEnumerable<Market.Models.Kitap>

@{
    ViewBag.Title = "TekUrun";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<!-- //navigation -->
<!-- breadcrumbs -->
<div class="breadcrumbs">
    <div class="container">
        <ol class="breadcrumb breadcrumb1 animated wow slideInLeft" data-wow-delay=".5s">
            <li><a href="index.html"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>AnaSayfa</a></li>
            <li class="active">Satın Al</li>
        </ol>
    </div>
</div>
<!-- //breadcrumbs -->
<div class="products">
    <div class="container">
        <div class="agileinfo_single">

            @foreach (var item in Model)
            {
                <div class="col-md-4 agileinfo_single_left">
                    <center><img id="example" src="~/images/pf44.png" alt=" " class="img-responsive"></center>
                </div>
                <div class="col-md-8 agileinfo_single_right">

                    <h2>@Html.DisplayFor(modelItem => item.KitapAdi)</h2>
                    <br />

                    <table>
                        <tr>
                            <th>Yazar Adi</th>
                            <th>&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;=>&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</th>
                            <td>@Html.DisplayFor(modelItem => item.YazarAdi)</td>
                        </tr>
                        <tr>
                            <th>Yayın Evi</th>
                            <th>&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;=>&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</th>
                            <td>@Html.DisplayFor(modelItem => item.YayinEvi)</td>
                        </tr>
                        <tr>
                            <th>Sayfa Sayisi</th>
                            <th>&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;=>&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</th>
                            <td>@Html.DisplayFor(modelItem => item.SayfaSayisi)</td>
                        </tr>
                        <tr>
                            <th>Basım Yılı</th>
                            <th>&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;=>&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</th>
                            <td>@Html.DisplayFor(modelItem => item.BasimYili)</td>
                        </tr>
                    </table>


                    <div class="w3agile_description">
                        <h4>Açıklama :</h4>
                        <p>
                            @Html.DisplayFor(modelItem => item.Aciklama)
                        </p>
                    </div>
                    <div class="snipcart-item block">
                        <div class="snipcart-thumb agileinfo_single_right_snipcart">
                            <h4 class="m-sing">@Html.DisplayFor(modelItem => item.Fiyat)    ₺</h4>
                        </div>
                        <div class="snipcart-details agileinfo_single_right_details">
                            <form action="~/SatinAl/SatinAl?Kitap=@Html.DisplayFor(modelItem => item.KitapID)" method="post">
                                <input type="submit" name="submit" value="Satın Al" class="button">
                            </form>
                        </div>
                    </div>
                </div>
            }
                
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
